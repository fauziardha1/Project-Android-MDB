<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CutiActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama" />

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama"
                android:backgroundTint="@color/colorEt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIP"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etNip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIP"
                android:backgroundTint="@color/colorEt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etJabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jabatan"
                android:backgroundTint="@color/colorEt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Hari Cuti"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etJml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Hari Cuti"
                android:backgroundTint="@color/colorEt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Cuti"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etTgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Cuti"
                android:backgroundTint="@color/colorEt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alasan"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etAlasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alasan"
                android:backgroundTint="@color/colorEt"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="17sp"
                android:layout_marginTop="50dp"
                android:background="@color/colorLogin"
                android:textColor="#ffff"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>