<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_employee"
        android:layout_width="84dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvEmployeeName"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:background="@color/placeholder_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_employee"
        app:layout_constraintTop_toTopOf="@+id/img_employee" />

    <View
        android:id="@+id/tvEmployeeNumber"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/placeholder_color"
        app:layout_constraintEnd_toEndOf="@+id/tvEmployeeName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_employee"
        app:layout_constraintTop_toBottomOf="@+id/tvEmployeeName" />

    <View
        android:id="@+id/tvEmployeeAddress"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/placeholder_color"
        app:layout_constraintEnd_toEndOf="@+id/tvEmployeeNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_employee"
        app:layout_constraintTop_toBottomOf="@+id/tvEmployeeNumber" />

    <View
        android:id="@+id/tvEmployeeGender"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/placeholder_color"
        app:layout_constraintStart_toEndOf="@+id/img_employee"
        app:layout_constraintTop_toBottomOf="@+id/tvEmployeeAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>